<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/gradStart"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/size200"
        android:layout_height="@dimen/size200"
        app:srcCompat="@drawable/slumber_dog_v1_white"
        android:layout_marginTop="@dimen/margin24"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/margin24"
        android:layout_marginTop="@dimen/margin36">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sign_in_to_continue"
            android:layout_marginStart="@dimen/margin4"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/email_signUp_Info"
            android:layout_marginTop="@dimen/margin12"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/password"/>

        <Button
            android:id="@+id/signinButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/SignUpButton"
            android:text="SIGN IN"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/size200"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin12"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/don_t_have_an_account"
            android:layout_marginStart="@dimen/margin4"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:gravity="bottom"
            android:onClick="createAccount"
            android:layout_marginVertical="8dp"
            tools:ignore="RtlCompat" />
<!--        <TextView-->
<!--            android:id="@+id/createAccountButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/create_account"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:textAlignment="center"-->
<!--            android:gravity="bottom"-->
<!--            android:onClick="createAccount"-->
<!--            android:layout_marginVertical="8dp"-->
<!--            tools:ignore="RtlCompat" />-->
    </LinearLayout>



</LinearLayout>